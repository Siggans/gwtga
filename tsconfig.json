{
    "compilerOptions": {
        "baseUrl": "src/server",
        "paths": {
            "*": [
                "*",
                "../type-definitions/*"
            ]
        },
        "target": "es6",
        "sourceMap": true,
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitUseStrict": true,
        "removeComments": false,
        "noEmit": true,
        "noLib": false,
        "preserveConstEnums": true,
        "pretty": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "artifacts/server",
        "rootDir": "src/server",
        "newLine": "lf"
    },
    "include": [
        "src/server/**/*.ts"
    ],
    "exclude": [
        "src/type-definitions"
    ],
    "compileOnSave": true,
    "buildOnSave": false
}
